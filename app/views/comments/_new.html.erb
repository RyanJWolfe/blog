<%= form_with model: [ @post, Comment.new ] do |form| %>
  <%= form.text_area :content, rows: 6, placeholder: "Your comment", class: "bg-base rounded-lg border-2 border-surface-accent focus:outline-none focus:ring focus:ring-primary/50 p-3 my-4 w-full" %>
  <div class="flex space-x-4">
    <%= form.submit 'Comment', class: "btn btn-primary" %>
    <%= link_to 'Back to posts', posts_path, class: "btn btn-tertiary" %>
  </div>
<% end %>