<div data-mobile-menu-target="dropdown"
     id="mobile-menu"
     class="-right-full w-7/12 h-screen absolute top-0 text-based bg-gradient-to-br from-surface to-base-hue
     shadow-xl dark:shadow-neutral-900 space-y-8 z-10 transition-[right] ease-in-out duration-500 px-6 sm:px-8 md:px-16">
  <ul class="w-full tracking-wider text-right text-lg md:text-xl pt-20 sm:pt-32 pb-10 font-poppins font-medium">
    <li class="py-2 md:py-3 side-menu-fade-in hover:bg-surface" style="transition-delay: 100ms;">
      <a href="/" class="inline-block w-full <%= 'py-1.5 pr-3 border-r-4 border-primary text-primary font-bold' if current_page? root_path %>" aria-current="page">Home</a>
    </li>
    <li class="py-2 md:py-3 side-menu-fade-in hover:bg-surface" style="transition-delay: 500ms;">
      <%= link_to 'About', root_path, class: "inline-block w-full #{'py-1.5 pr-3 border-r-4 border-primary text-primary font-bold' if current_page? ''}" %>
    </li>
    <li class="py-2 md:py-3 side-menu-fade-in hover:bg-surface" style="transition-delay: 600ms;">
      <%= link_to 'Contact', root_path, class: "inline-block w-full #{'py-1.5 pr-3 border-r-4 border-primary text-primary font-bold' if current_page? ''}" %>
    </li>
  </ul>
</div>