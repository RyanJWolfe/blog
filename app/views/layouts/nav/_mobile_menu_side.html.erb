<div data-mobile-menu-target="dropdown"
     id="mobile-menu"
     class="-right-full w-7/12 h-screen absolute top-0 text-based bg-gradient-to-br from-surface to-base-hue
     shadow-xl dark:shadow-neutral-900 space-y-8 z-10 transition-[right] ease-in-out duration-500 px-6 sm:px-8 md:px-16">
  <div class="flex flex-col space-y-2 w-full tracking-wider text-right text-lg md:text-xl pt-20 sm:pt-32 pb-10 font-poppins font-medium">
    <%= link_to root_path,
                class: "w-full px-3 py-2 side-menu-fade-in hover:bg-surface-accent
                #{'border-r-4 border-primary text-primary font-bold' if current_page? root_path}",
                style: "transition-delay: 100ms;" do %>
      <span class="inline-block w-full">Home</span>
    <% end %>
    <%= link_to about_path,
                class: "w-full px-3 py-2 side-menu-fade-in hover:bg-surface-accent
                #{'border-r-4 border-primary text-primary font-bold' if current_page? about_path}",
                style: "transition-delay: 200ms;" do %>
      <span class="inline-block w-full">About</span>
    <% end %>
    <%= link_to contact_path, class: "w-full px-3 py-2 side-menu-fade-in hover:bg-surface-accent
                              #{'border-r-4 border-primary text-primary font-bold' if current_page? contact_path}",
                              style: "transition-delay: 300ms;" do %>
      <span class="inline-block w-full">Contact</span>
    <% end %>
  </div>
</div>