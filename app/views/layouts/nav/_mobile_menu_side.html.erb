<div data-mobile-menu-target="dropdown"
     id="mobile-menu"
     class="-right-full w-7/12 h-screen absolute top-0 text-based bg-gradient-to-br from-surface to-base-hue
     shadow-xl dark:shadow-neutral-900 space-y-8 z-10 transition-[right] ease-in-out duration-500 px-6 sm:px-8 md:px-16">
  <div class="flex flex-col space-y-2 w-full tracking-wider text-right text-lg md:text-xl pt-20 sm:pt-32 pb-10 font-poppins font-medium">
    <%= render 'layouts/nav/side_menu_link',
               route: root_path,
               content: 'Home',
               condition: current_page?(root_path),
               delay: '100ms' %>
    <%= render 'layouts/nav/side_menu_link',
               route: posts_path,
               content: 'Posts',
               condition: inside_posts,
               delay: '200ms' %>
    <%= render 'layouts/nav/side_menu_link',
               route: about_path,
               content: 'About',
               condition: inside_about,
               delay: '300ms' %>
    <%= render 'layouts/nav/side_menu_link',
               route: contact_path,
               content: 'Contact',
               condition: inside_contact,
               delay: '400ms' %>
    <% if admin_signed_in? %>
      <%= button_to destroy_admin_session_path,
                    method: :delete,
                    class: "w-full px-3 py-2 side-menu-fade-in hover:bg-surface-accent",
                    style: "transition-delay: 500ms;" do %>
        <span class="text-right inline-block w-full">Sign out</span>
      <% end %>
    <% end %>
  </div>
</div>