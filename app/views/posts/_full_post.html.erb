<div id="<%= dom_id post %>">
  <p class="text-muted">
    <%= time_tag post.created_at %>
  </p>
  <h2 class="my-1 font-display font-bold text-2xl">
    <%= post.title %>
  </h2>


  <p class="my-2">
    <%= post.content %>
  </p>



  <% if action_name != "show" %>
    <%= link_to "Show this post", post, class: "btn btn-primary" %>
    <% if admin_signed_in? %>
      <%= link_to 'Edit this post', edit_post_path(post), class: "btn btn-tertiary" %>
    <% end %>
    <hr class="mt-6">
  <% end %>
</div>
