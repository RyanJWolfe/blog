<%= link_to post do %>
  <div id="<%= dom_id post %>"
       class="px-5">
    <p class="text-muted">
      <%= time_tag post.created_at %>
    </p>
    <h2 class="my-1 font-display font-bold text-2xl">
      <%= post.title %>
    </h2>


    <p class="my-2">
      <%= truncate(strip_tags(post.content.to_s), length: 70) %>
    </p>

    <p class="mt-5 text-muted">
      <strong><%= pluralize post.comments.count, "comment" %></strong>
    </p>



    <% if action_name != "show" %>
      <% if admin_signed_in? %>
      <%= link_to 'Edit this post', edit_post_path(post), class: "btn btn-tertiary" %>
      <% end %>
      <hr class="mt-6 border">
    <% end %>
</div>
<% end %>
