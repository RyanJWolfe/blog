<div id="<%= dom_id post %>" class="bg-surface drop-shadow-lg p-5 border border-surface-accent z-0">
  <h2 class="font-display font-bold text-2xl">
    <%= post.title %>
  </h2>

  <p class="text-muted">
    Posted <%= time_tag post.created_at, "data-local": "time-ago" %>
  </p>

  <p class="my-5">
    <%= post.content %>
  </p>

  <p class="my-5">
    <strong><%= pluralize post.comments.count, "comment" %></strong>
  </p>



  <% if action_name != "show" %>
    <%= link_to "Show this post", post, class: "btn btn-primary" %>
    <% if admin_signed_in? %>
    <%= link_to 'Edit this post', edit_post_path(post), class: "btn btn-tertiary" %>
    <% end %>
    <hr class="mt-6">
  <% end %>
</div>
