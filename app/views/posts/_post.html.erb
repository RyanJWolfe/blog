<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    Posted <%= time_tag post.created_at, "data-local": "time-ago" %>
  </p>

  <p class="my-5">
    <strong><%= pluralize post.comments.count, "comment" %></strong>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this post", post, class: "btn btn-primary" %>
    <% if admin_signed_in? %>
    <%= link_to 'Edit this post', edit_post_path(post), class: "btn btn-tertiary" %>
    <% end %>
    <hr class="mt-6">
  <% end %>
</div>
